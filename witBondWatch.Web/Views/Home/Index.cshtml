
@{
    ViewBag.Title = "Index";
}

<h2>Bonds:</h2>
<div data-ng-app="loanApp" data-ng-controller="loanCtrl">
    <div class="loader">
    <img src="~/Images/ajax-loader.gif" class="ajax-loader" data-ng-show="!loaded" />
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Bond</th>
        <th>Value</th>
        <th>Actual(%)</th>
        <th>Diff</th>
      </tr>
    </thead>
    <tbody>
      <tr data-ng-repeat="bond in bonds">
        <td>{{bond.Issuer}}</td>
        <td>{{bond.Value}}</td>
        <td>{{(bond.ActualPercentage) | number:2}}</td>
        <td>{{bond.Delta}}</td>
      </tr>
    </tbody>
  </table>
  <div>
    <span class="badge">Updated: {{updateTime}}</span>
  </div>
</div>
@section scripts
{
  <script src="~/Scripts/App/Home/Index/App.js"></script>
}
